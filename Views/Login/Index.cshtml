@model MVCTask.Models.Person


<h2>@Resources.Home.Login</h2>


@using (Html.BeginForm("Index", "Person", FormMethod.Post))
{
<div class="form-group">
    <label for="nickInput">@Resources.Login.Nickname</label>
    @Html.TextBoxFor(m => m.Nickname)
</div>
    <div class="form-group">
        <label for="emailInput">@Resources.Login.Email</label>
        @Html.TextBoxFor(m => m.Email)
    </div>
    <button type="submit">@Resources.Login.Submit</button>
}